{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "response_type": {"type": "string", "enum": ["in_channel"]},
        "attachments": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "text": {"type": "string"},
                    "actions": {
                        "type": "array",
                        "minItems": 2,
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {"type": "string"},
                                "integration": {
                                    "type": "object",
                                    "properties": {
                                        "url": {"type": "string",
                                            "format": "hostname"},
                                            "context": {
                                                "type": "object"
                                            }
                                    },
                                    "required": ["url", "context"]
                                }
                            },
                            "required": ["name", "integration"]
                        }
                    }
                },
                "required": ["text", "actions"]
            }
        }
    },
    "required": ["response_type", "attachments"]
}
